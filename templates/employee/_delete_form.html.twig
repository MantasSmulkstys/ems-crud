<button type="button" class="btn btn-danger {{ button_class|default('') }}" data-bs-toggle="modal" data-bs-target="#{{ modalId|default('deleteEmployeeModal') }}">
    Delete
</button>

<div class="modal fade" id="deleteEmployeeModal" tabindex="-1" aria-labelledby="deleteEmployeeModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title card-header-text" id="deleteEmployeeModalLabel">
                    Confirm Deletion
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="d-flex align-items-center mb-3">
                    <div class="avatar-sm bg-danger text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                        {{ employee.name|slice(0, 2)|upper }}
                    </div>
                    <div>
                        <h6 class="mb-1">{{ employee.name }}</h6>
                        <small class="text-muted">{{ employee.email }}</small>
                    </div>
                </div>
                <p class="mb-2">Are you sure you want to permanently delete this employee?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    Cancel
                </button>
                <form method="post" action="{{ path('app_employee_delete', {'id': employee.id}) }}" class="d-inline">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ employee.id) }}">
                    <button type="submit" class="btn btn-danger">
                        Delete Employee
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
