<div class="row justify-content-center">
    <div class="col-lg-8">
        {{ form_start(form, {'attr': {'class': 'needs-validation', 'autocomplete': 'off', 'novalidate': true}}) }}
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0 card-header-text">
                        Employee Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            {{ form_label(form.name, 'Full Name', {'label_attr': {'class': 'form-label fw-normal'}}) }}
                            {{ form_widget(form.name, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Enter full name'}}) }}
                            {{ form_errors(form.name) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_label(form.email, 'Email Address', {'label_attr': {'class': 'form-label fw-normal'}}) }}
                            {{ form_widget(form.email, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'employee@company.com'}}) }}
                            {{ form_errors(form.email) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_label(form.phoneNumber, 'Phone Number', {'label_attr': {'class': 'form-label fw-normal'}}) }}
                            {{ form_widget(form.phoneNumber, {'attr': {'class': 'form-control form-control-lg', 'placeholder': '+1 (555) 123-4567'}}) }}
                            {{ form_errors(form.phoneNumber) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_label(form.hireDate, 'Hire Date', {'label_attr': {'class': 'form-label fw-normal'}}) }}
                            {{ form_widget(form.hireDate, {'attr': {'class': 'form-control form-control-lg'}}) }}
                            {{ form_errors(form.hireDate) }}
                        </div>
                        {% if form.department is defined %}
                        <div class="col-12">
                            {{ form_label(form.department, 'Department', {'label_attr': {'class': 'form-label fw-normal'}}) }}
                            {{ form_widget(form.department, {'attr': {'class': 'form-select form-select-lg'}}) }}
                            {{ form_errors(form.department) }}
                        </div>
                        {% endif %}
                    </div>
                </div>
                <div class="card-footer bg-white border-top">
                    <div class="d-flex justify-content-between align-items-center">
                        <a href="{{ path('app_employee_index') }}" class="btn btn-secondary">
                            Back to List
                        </a>
                        <button type="submit" class="btn btn-primary">
                            {{ button_label|default('Save Employee') }}
                        </button>
                    </div>
                </div>
            </div>
        {{ form_end(form) }}
    </div>
</div>
